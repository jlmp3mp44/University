<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.solvd.university.dao.AssessmentRepository">

    <insert id="createSubject"  keyColumn="id" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO subjects(title,decription) VALUES (#{title}, #{description})
    </insert>


    <select id="findByIdSubject" resultMap="SubjectResultMap">
        SELECT title, description FROM  subjects WHERE id = ?
    </select>

    <resultMap id="SubjectResultMap" type="com.solvd.university.model.Subject" autoMapping="false">
        <result column="title" property="title"/>
        <result column="description" property="description"/>
    </resultMap>

</mapper>