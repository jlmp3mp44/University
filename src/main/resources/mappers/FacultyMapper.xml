<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.solvd.university.dao.EducationalRepository">

    <insert id="createFaculty"  keyColumn="id" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO faculties(title, description, dekan, university_id) VALUES (#{title}, #{description}, #{dekan},
                                #{universityId})
    </insert>


    <select id="findAllFaculty" resultMap="FacultyResultMap">
        SELECT title, dekan  FROM faculties
    </select>

    <resultMap id="FacultyResultMap" type="com.solvd.university.model.Faculty" autoMapping="false">
        <result column="title" property="title"/>
        <result column="dekan" property="dekan"/>
    </resultMap>

</mapper>