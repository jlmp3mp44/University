<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.solvd.university.dao.EducationalRepository">

    <insert id="createUniversity"  keyColumn="id" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO universities(title, rector) VALUES (#{title}, #{rector})
    </insert>

    <select id="findAllUniversity" resultMap="UniversityResultMap">
        SELECT title, rector FROM universities
    </select>

    <resultMap id="UniversityResultMap" type="com.solvd.university.model.University" autoMapping="false">
        <result column="title" property="title"/>
        <result column="rector" property="rector"/>
    </resultMap>

</mapper>